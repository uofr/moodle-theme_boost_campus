<div class="list-group-flush">
    {{#searchResults}}
        <div class="list-group-item">
            <div class="mb-2">
                <h3 class="mb-0">
                    <a href="#" data-url="{{{url}}}" class='modal-help-search-result'>
                        {{#search-prefix}}{{search-prefix}}: {{/search-prefix}}{{page-title}}
                    </a>
                </h3>
                <div class="d-flex flex-column">
                    <small>{{page-date}} (Modified {{page-modified-date}})</small>
                </div>
            </div>
            <p class="mb-0">
                {{excerpt}}
            </p>
        </div>
    {{/searchResults}}

    {{^searchResults}}
        <h3>No Results Found</h3>
        <p>
            No results were found for the term <strong>{{query}}</strong>
        </p>
    {{/serachResulst}}
</div>
