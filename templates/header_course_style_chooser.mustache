{{!
    @template uofr_conservatory/header_course_style_chooser

    This template renders the course header style chooser buttons.

}}
<div id="theme_uofr_conservatory_header_course_style_chooser_{{uniqid}}" class="course-hdr-chooser-container">
    <div class="btn-group course-hdr-chooser">
		<span class="d-none d-md-inline">Change Header Style</span>
        <button id="hdr_chooser_a" class="btn btn-sm{{^headerstyle}} btn-success " disabled="true{{/headerstyle}}" title="Square Style{{^headerstyle}} (Selected){{/headerstyle}}">{{# pix }} hdr_style_a, theme_uofr_conservatory, Square style {{/ pix }}</button>
        <button id="hdr_chooser_b" class="btn btn-sm{{#headerstyle}} btn-success disabled="true{{/headerstyle}}" title="Background Style{{#headerstyle}} (Selected){{/headerstyle}}">{{# pix }} hdr_style_b, theme_uofr_conservatory, Background style {{/ pix }}</button>
    </div>
</div>

{{#js}}
    require(['theme_uofr_conservatory/course_style_chooser'], function(main) {
        main.init('#theme_uofr_conservatory_header_course_style_chooser_{{uniqid}}', {{courseid}}, {{headerstyle}});
    });
{{/js}}